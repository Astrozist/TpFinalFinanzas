@model IEnumerable<FinanzasWeb.Dtos.GastoDto>

@{ 
    ViewData["Title"] = "Mis Ahorros"; 
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fa-solid fa-wallet me-2"></i> Mis ahorros</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fa-solid fa-plus"></i> Nuevo ahorro
        </a>
    </div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm rounded-4" style="background-color: #1b4332 !important;">
            <div class="card-body d-flex align-items-center justify-content-between p-4">
                <div>
                    <h6 class="text-lowercase mb-1" style="color: #d8f3dc;">Total Ahorrado</h6>
                    <h3 class="mb-0 fw-bold">$ @ViewBag.TotalAhorrado</h3>
                </div>
                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                    <i class="fa-solid fa-piggy-bank fa-xl" style="color: #1b4332;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm mt-3 bg-white rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Monto)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td class="text-start fw-bold">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                     <span class="badge bg-danger rounded-pill fs-6">
                         $ @Html.DisplayFor(modelItem => item.Monto)
                     </span>
                    </td>
                    <td class="text-muted">@item.Fecha.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Borrar">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>