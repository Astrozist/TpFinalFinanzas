@model FinanzasWeb.Dtos.GastoDto

@{ ViewData["Title"] = "Borrar"; }

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Monto)</dt>
