<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ahorros del Ojo</title>
    <script type="importmap"></script>
     @* Fuente personalizada similar al trabajo de ahorros del ojo que hicimos *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/flatly/bootstrap.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanzasWeb.styles.css" asp-append-version="true" />
</head>

<body style="background-color: #f4f7f6;">
    
    <header style="background-color: #1b4332; padding: 15px 30px; display: flex; justify-content: space-between; align-items: center; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <div class="d-flex align-items-center gap-3">
            <img src="~/images/ojo_logo.png" alt="Logo-principal" style="height: 60px;">
            <h1 class="m-0 text-white fs-4 fw-bold">Ahorros del Ojo</h1>
        </div>
        
        <nav class="d-flex align-items-center gap-3">
            <a href="#" class="text-white text-decoration-none fw-medium">Usuario</a>
            <img src="~/images/usuario.png" alt="Logo_usuario" class="rounded-circle shadow-sm" style="height: 50px; background-color: white; padding: 2px;">
        </nav>
    </header>

    <div class="container mt-4 bg-white p-4 rounded shadow-sm">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>